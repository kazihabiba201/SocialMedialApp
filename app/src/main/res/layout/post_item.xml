<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_2sdp"
    android:elevation="@dimen/_5sdp"
android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:background="#F5F6FB">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_views"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFF3"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="3dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#EFEFF3"
        app:cardCornerRadius="2dp"

       >
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewsss"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFF3"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:src="@drawable/profile_foreground"
            app:civ_border_width="2dp"
            app:civ_border_color="#F1F2F3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_profile_name"
            android:text="Robin Cru"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_40sdp"
            android:textSize="@dimen/_13sdp"
            />
        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/_10ssp"
            android:src="@drawable/ic__more"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:foregroundGravity="fill"
            app:cardCornerRadius="@dimen/_30sdp"
            android:background="#F1F2F3"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_viewss"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F6FB"
                android:elevation="@dimen/_10ssp"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/profile_foreground"
                app:layout_constraintDimensionRatio="4.5"
                app:cardCornerRadius="@dimen/_10sdp"
                tools:ignore="MissingConstraints" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/post_text"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:gravity="left|center"
        android:layout_gravity="start"
        android:visibility="gone"
        android:paddingLeft="@dimen/_10ssp"
        android:paddingRight="@dimen/_10ssp"
        android:text="78"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:textColor="#2D2D2E"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_2ssp"

            android:elevation="@dimen/_10sdp"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
android:paddingTop="@dimen/_2ssp"
        android:padding="5dp"
        android:elevation="@dimen/_10sdp"
       >
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFEFF3"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75"
            android:padding="5dp"

            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_like"
            />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"

                android:minWidth="@dimen/_30sdp"
                android:layout_gravity="start"
           android:layout_marginLeft="@dimen/_70sdp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_comment"
                />


        </androidx.cardview.widget.CardView>
    </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

